# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
# Zend Framework 2 Coding Standards
# http://framework.zend.com/wiki/display/ZFDEV2/Coding+Standards#CodingStandards-Indentation
indent_size = 4
indent_style = space
